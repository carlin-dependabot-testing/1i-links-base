{
  "extends": "@links-base/tsconfig/base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/components": ["./src/shadcn/*"],
      "~/magicui": ["./src/magicui/*"],
      "~/utils": ["./src/utils"],
      "~/lib/*": ["./src/lib/*"],
      "~/hooks": ["./src/hooks"],
      "~/ui": ["./src/shadcn/*"],
      "~/ui/*": ["./src/shadcn/*"]
    },
    "incremental": true,
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
  },
  "include": ["src", "tailwind.config.ts"],
  "exclude": ["node_modules", "dist"]
}
